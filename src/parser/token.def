
#ifndef KEYWORD
#define KEYWORD(kw)
#endif

#ifndef DECL_KEYWORD
#define DECL_KEYWORD(kw) KEYWORD(kw)
#endif

/// STMT_KEYWORD(kw)
///   Expands for every Setti keyword used in statement grammar.
#ifndef STMT_KEYWORD
#define STMT_KEYWORD(kw) KEYWORD(kw)
#endif

/// PUNCTUATOR(name, str)
#ifndef PUNCTUATOR
#define PUNCTUATOR(name, str)
#endif

// Keywords that start decls.
DECL_KEYWORD(CLASS)
DECL_KEYWORD(INTERFACE)
DECL_KEYWORD(ABASTRACT)
DECL_KEYWORD(ENUM)
DECL_KEYWORD(EXTENDS)
DECL_KEYWORD(IMPLEMENTS)
DECL_KEYWORD(FUNC)
DECL_KEYWORD(CMD)
DECL_KEYWORD(IMPORT)
DECL_KEYWORD(LET)
DECL_KEYWORD(OPERATOR)
DECL_KEYWORD(ALIAS)
DECL_KEYWORD(TYPE)
DECL_KEYWORD(VAR)
DECL_KEYWORD(INTERNAL)
DECL_KEYWORD(PROTECTED)
DECL_KEYWORD(PRIVATE)
DECL_KEYWORD(PUBLIC)
DECL_KEYWORD(STATIC)

// Statement keywords.
STMT_KEYWORD(DEFER)
STMT_KEYWORD(IF)
STMT_KEYWORD(GUARD)
STMT_KEYWORD(DO)
STMT_KEYWORD(REPEAT)
STMT_KEYWORD(ELSE)
STMT_KEYWORD(FOR)
STMT_KEYWORD(IN)
STMT_KEYWORD(WHILE)
STMT_KEYWORD(RETURN)
STMT_KEYWORD(BREAK)
STMT_KEYWORD(CONTINUE)
STMT_KEYWORD(SWITCH)
STMT_KEYWORD(CASE)
STMT_KEYWORD(DEFAULT)
STMT_KEYWORD(WHERE)
STMT_KEYWORD(CATCH)

// Expression keywords.
KEYWORD(AS)
KEYWORD(TYPEOF)
KEYWORD(INSTANCEOF)
KEYWORD(FALSE)
KEYWORD(IS)
KEYWORD(DEVNULL)
KEYWORD(NULL)
KEYWORD(RETHROW)
KEYWORD(SUPER)
